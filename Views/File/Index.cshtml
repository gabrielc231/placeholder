@{
    ViewData["Title"] = "File Page";
}
@model IEnumerable<FileModel>

<h2>Gerenciamento de Arquivos</h2>

<form asp-action="UploadFile" enctype="multipart/form-data" method="post">
    <label for="file">Selecione um arquivo:</label>
    <input type="file" name="file" />
    <button type="submit">Upload</button>
</form>

<table>
    <thead>
        <tr>
            <th>Nome do Arquivo</th>
            <th>Data de Upload</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.FileName</td>
                <td>@file.UploadDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="DownloadFile" asp-route-id="@file.Id">Baixar</a> |
                    <form asp-action="RemoveFile" asp-route-id="@file.Id" method="post" style="display:inline;">
                        <button type="submit">Remover</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
